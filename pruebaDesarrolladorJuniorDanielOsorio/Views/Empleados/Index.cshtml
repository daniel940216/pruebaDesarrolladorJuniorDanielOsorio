@model IEnumerable<pruebaDesarrolladorJuniorDanielOsorio.Models.Empleado>
@{
    ViewData["Title"] = "Lista de empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de empleados</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Empleados">Agregar nuevo empleado</a>
        </div>
    </div>

    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.tipoDocumento)</td>
                        <td>@Html.DisplayNameFor(m => m.documento)</td>
                        <td>@Html.DisplayNameFor(m => m.nombres)</td>
                        <td>@Html.DisplayNameFor(m => m.apellidos)</td>
                        <td>@Html.DisplayNameFor(m => m.area)</td>
                        <td>@Html.DisplayNameFor(m => m.subArea)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.tipoDocumento</td>
                            <td>@item.documento</td>
                            <td>@item.nombres</td>
                            <td>@item.apellidos</td>
                            <td>@item.area</td>
                            <td>@item.subArea</td>
                            <td>
                                <a asp-controller="Empleados" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-controller="Empleados" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>
</div>

